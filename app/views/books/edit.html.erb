<h1 class="headline">Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
  
  <% if @book.errors.any? %>  
    <div class="error-explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book being saved:</h2>
        
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>  
    </div>  
  <% end %>
      
  <div class="form">
    <div class="form-body">
      <%= f.label :title %>
      <%= f.text_field :title, value: @book.title %>
      <%= f.label :body %>
      <%= f.text_area :body, value: @book.body %>
      <%= f.submit 'Update Book' %>
    </div>
  </div>
<% end %>

<%= link_to "Show", book_path(@book) %>
<span>|</span>
