<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>Show</td>
    <td>Edit</td>
    <td>Destroy</td>
    </tr>
  <% end %>
</table>

<!--投稿フォーム-->
<h2>New book</h2>
<%= form_with model:@book, url:'/books/create', local:true do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


